<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/group_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="@dimen/spacingS"
        android:text="@string/group_name"
        android:textSize="@dimen/fontSizeM"
        />

    <TextView
        android:textSize="@dimen/fontSizeS"
        android:id="@+id/group_item_description"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_description"
        android:layout_marginBottom="@dimen/spacingM"
        />
</LinearLayout>
