<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:textSize="@dimen/fontSizeM"
        android:id="@+id/group_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:paddingBottom="@dimen/spacingS"
        android:text="@string/user_full_name"
        />

    <TextView
        android:id="@+id/group_user_login"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSizeS"
        android:text="@string/group_user_login"
        />
</LinearLayout>
